{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "es5",
		"module": "amd",
		"declaration": false,
		"noImplicitAny": false,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"lib": [
			"es2017",
			"dom"
		]
	},
	"include": [
		"**/*"
	],
	"exclude": [
		"node_modules"
	]
}